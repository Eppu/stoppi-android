<?xml version='1.0' encoding='utf-8'?>
<widget id="com.eetueskelinen.stoppi" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://eetueskelinen.com">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Stoppi</name>
    <description>
        Stoppi is a real-time bus tracker for students in Tampere.
    </description>
    <author email="edwardtehgreat@gmail.com" href="https://eetueskelinen.com">
        Eetu Eskelinen
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
